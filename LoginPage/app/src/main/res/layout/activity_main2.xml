<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/LoginBackgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background"
        android:scaleType="centerCrop"
        android:src="@drawable/phone_background2" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="150dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/SignImage"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginStart="150dp"
        android:src="@drawable/sign_up" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:text="Sign Up"

        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

</LinearLayout>


    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="195dp"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:text="Enter Your Personal Information"
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <AutoCompleteTextView
            android:id="@+id/field1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="235dp"
            android:background="@drawable/rounded_rectangle"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:hint="Office Name"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColorHint="@android:color/background_dark"
            android:textSize="16sp"
            />

        <AutoCompleteTextView
            android:id="@+id/field2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rectangle"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:hint="Office Number"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColorHint="@android:color/background_dark"
            android:textSize="16sp"
            />

        <AutoCompleteTextView
            android:id="@+id/field3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rectangle"
            android:drawableLeft="@drawable/ic_grid_world"
            android:hint="Website"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:textAlignment="center"

            android:textColorHint="@android:color/background_dark"
            android:textSize="16sp"
            />

        <Spinner
            android:id="@+id/field4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_man_user"
            android:background="@drawable/rounded_rectangle"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textColorHint="@android:color/background_dark"
            android:textSize="16sp"
            />

        <Button

            android:id="@+id/register"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rectangle_black"
            android:text="register"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColorHint="@android:color/background_dark"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />



    </LinearLayout>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="500dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:clickable="true"
        android:text="Already Registered? Sign In Here"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />


</RelativeLayout>